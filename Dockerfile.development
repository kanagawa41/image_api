FROM alpine:latest

ENV NODE_ENV development

RUN apk add --update --no-cache nodejs \
        nodejs-npm \
        binutils-gold \
        curl \
        g++ \
        gcc \
        gnupg \
        libgcc \
        linux-headers \
        make \
        python \
        sqlite

COPY package*.json ./

RUN npm set progress=false && \
    npm config set depth 0 && \
    npm install && \
    npm cache clean --force